@model MeusLivros_ProjetoMVC.Models.Livro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Livro</h4>
<hr />
<div>
    <div class="">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LivroId" />
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="NomeLivro" class="control-label"></label>
                    <input asp-for="NomeLivro" class="form-control" />
                    <span asp-validation-for="NomeLivro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="AnoPublicacao" class="control-label"></label>
                    <input asp-for="AnoPublicacao" class="form-control" />
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="EditoraId" class="control-label"></label>
                    <select asp-for="EditoraId" class="form-control" asp-items="ViewBag.EditoraId"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="AutorId" class="control-label"></label>
                    <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    
                    <label asp-for="Genero" class="control-label"></label>
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                 
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="StatusId" class="control-label"></label>
                    <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Nota" class="control-label"></label>
                    <input asp-for="Nota" class="form-control" />
                    <span asp-validation-for="Nota" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
