@model IEnumerable<MeusLivros_ProjetoMVC.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>

<p>
     @using (Html.BeginForm()){    

         <div class="row">
             <div class="col-md-2"> 
             Livro: @Html.TextBox("SearchString")
            
            </div>
            <div class="col-md-2">
             Genero: @Html.TextBox("bookGenre")   
            
            </div> 
            <div class="col-md-2">
             Autor: @Html.TextBox("autor")   
            
            </div>
            <div class="col-md-1">
             Status: @Html.DropDownList("status", "All")
            </div>
            <div class="col-md-2">
            <input type="submit" value="Buscar" style="margin-left: 50px; padding: 10px; padding-left:20px; padding-right: 20px; margin-top: 5px">
            </div>
         </div>
         
        } 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeLivro)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.AnoPublicacao)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeLivro)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Editora.NomeEditora)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Autor.NomeAutor)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.AnoPublicacao)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Mensagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LivroId"><img src="imagens/icons8-editar-24.png" /></a> |
                <a asp-action="Details" asp-route-id="@item.LivroId"><img src="imagens/icons8-documento-24.png" /></a> |
                <a asp-action="Delete" asp-route-id="@item.LivroId"><img src="imagens/icons8-lixo-24.png" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
