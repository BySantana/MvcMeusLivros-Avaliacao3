@model IEnumerable<MeusLivros_ProjetoMVC.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Autores</h1>

<p>
    <a asp-action="Create">Adicionar novo Autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutorId"><img src="imagens/icons8-editar-24.png" /></a> |
                <a asp-action="Details" asp-route-id="@item.AutorId"><img src="imagens/icons8-documento-24.png" /></a> |
                <a asp-action="Delete" asp-route-id="@item.AutorId"><img src="imagens/icons8-lixo-24.png" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
